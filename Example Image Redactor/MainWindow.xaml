<Window x:Class="Example_Image_Redactor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example_Image_Redactor"
        mc:Ignorable="d"
        Title="Пример #1. Простой обработчик изображений" Height="400" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" BorderBrush="DimGray" BorderThickness="1" Margin="5">
            <StackPanel Margin="5">

                <Button Content="Открыть изображение" Click="LoadImage_Click" Margin="0,0,0,10" FontWeight="Bold"/>
                <Button Content="Инвертировать" Click="Invert_Click" Margin="0,0,0,5"/>
                <Label Content="Яркость"/>
                <Slider Minimum="-100" Maximum="100" Value="0" Name="BrightnessSlider" ValueChanged="BrightnessSlider_ValueChanged"/>
                <Button Content="Сохранить изображение" Click="SaveImage_Click" Margin="0,10,0,0" FontWeight="Bold"/>
            </StackPanel>
        </Border>
        <Border Grid.Column="1" BorderBrush="DimGray" BorderThickness="1" Margin="5">
            <Image Name="MainImage"  Margin="5" Stretch="Uniform"/>
        </Border>
    </Grid>
</Window>
